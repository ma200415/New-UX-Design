<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.food_menu.NewMenuFragment">

    <include
        android:id="@+id/current_mcd_layout"
        layout="@layout/current_mcd_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/current_mcd_layout_margin"
        android:layout_marginVertical="@dimen/current_mcd_layout_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/first_item"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/new_menu_item_margin"
        android:src="@drawable/new_food_1"
        app:layout_constraintBottom_toTopOf="@+id/third_item"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toStartOf="@+id/second_item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/current_mcd_layout" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/second_item"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/new_menu_item_margin"
        android:background="@drawable/border_black"
        app:layout_constraintBottom_toTopOf="@+id/fourth_item"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/first_item"
        app:layout_constraintTop_toBottomOf="@+id/current_mcd_layout" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/third_item"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/new_menu_item_margin"
        android:background="@drawable/border_black"
        app:layout_constraintBottom_toTopOf="@+id/fifth_item"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toStartOf="@+id/fourth_item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_item" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/fourth_item"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/new_menu_item_margin"
        android:background="@drawable/border_black"
        app:layout_constraintBottom_toTopOf="@+id/sixth_item"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/third_item"
        app:layout_constraintTop_toBottomOf="@+id/second_item" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/fifth_item"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/new_menu_item_margin"
        android:background="@drawable/border_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toStartOf="@+id/sixth_item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/third_item" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/sixth_item"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/new_menu_item_margin"
        android:background="@drawable/border_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fifth_item"
        app:layout_constraintTop_toBottomOf="@+id/fourth_item" />
</androidx.constraintlayout.widget.ConstraintLayout>